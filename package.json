{
  "private": true,
  "name": "remix-guide",
  "main": "./worker.js",
  "description": "A platform for sharing everything about Remix",
  "license": "MIT",
  "scripts": {
    "cleanup": "rimraf .cache ./dist ./build ./public/build ./app/styles/tailwind.css",
    "build:remix": "remix build",
    "build:style": "cross-env NODE_ENV=production tailwindcss -o ./app/styles/tailwind.css --minify",
    "build:worker": "cross-env NODE_ENV=production VERSION=$(git rev-parse --short HEAD) node ./scripts/build.mjs",
    "build": "npm run build:style && npm run build:remix && npm run build:worker",
    "dev:cypress": "cypress open -c baseUrl=http://localhost:8787",
    "dev:miniflare": "node --experimental-vm-modules ./scripts/dev.mjs",
    "dev:remix": "remix watch",
    "dev:style": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "postinstall": "remix setup cloudflare-pages",
    "prebuild": "npm run cleanup",
    "test:cypress": "cypress run",
    "test": "START_SERVER_AND_TEST_INSECURE=1 start-server-and-test https://localhost:8787 test:cypress",
    "start": "node --experimental-vm-modules ./scripts/preview.mjs",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@remix-run/cloudflare-pages": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "html-entities": "^2.3.2",
    "nanoid": "^3.1.30",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remix": "^1.1.1",
    "remix-auth": "2.6",
    "toucan-js": "^2.5.0",
    "workers-logger": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.0",
    "@cloudflare/wrangler": "^1.19.6",
    "@remix-run/dev": "^1.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/cypress": "^8.0.2",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.2.0",
    "esbuild": "^0.14.8",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-remix": "0.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "miniflare": "^2.0.0-rc.4",
    "nock": "^13.2.1",
    "postcss": "^8.4.5",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=16.7"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,mjs,ts,tsx,css,md,yml}": "prettier --write"
  }
}
